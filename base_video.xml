<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "../mythuitheme.dtd">
<mythuitheme>

    <!-- Shows a large version of the video cover with the rating below it -->
    <group name="base_video_large_cover_group">
    
        <!-- the darkened background around the area -->
        <shape name="video_cover_background" from="base_background_shape">
            <area>0,0,307,510</area>
        </shape>

        <!-- the border around the cover -->
        <imagetype name="coverart_border">
            <area>23,23,262,410</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>
        
        <!-- the actual cover image -->
        <imagetype name="coverart">
            <area>23,23,262,410</area>
            <mask></mask>
            <preserveaspect>true</preserveaspect>
        </imagetype>
        
        <!-- the rating of the video -->
        <imagetype name="userratingstate_background" from="base_rating_background">
            <position>100,450</position>
        </imagetype>
        <statetype name="userratingstate" from="base_rating">
            <position>100,450</position>
        </statetype>
    </group>
    
    
    
    

    <!-- Shows all information about the selected video without a border
         This is usually used in the itemdetailpopup window -->
    <group name="base_video_detailed_description_group">
        
        <textarea name="title" from="base_textarea">
            <area>20,15,600,30</area>
            <font>title</font>
            <cutdown>yes</cutdown>
        </textarea>

        <!-- the rating of this movie, -->
        <imagetype name="userratingstate_background" from="base_rating_background">
            <position>645,20</position>
        </imagetype>
        <statetype name="userratingstate" from="base_rating">
            <position>645,20</position>
        </statetype>

        <textarea name="subtitle" from="base_textarea">
            <area>20,48,600,30</area>
            <font>text_small</font>
            <cutdown>yes</cutdown>
        </textarea>

        <shape name="title_separator" from="base_separator_shape">
            <area>20,285,715,1</area>
        </shape>

        <textarea name="description" from="base_textarea">
            <area>20,100,715,160</area>
            <font>text_small</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>left,top</align>
        </textarea>

        <shape name="description_separator" from="base_separator_shape">
            <area>20,260,715,1</area>
        </shape>

        <!-- show the name of the different labels -->
        <textarea name="director_label" from="base_textarea">
            <area>20,270,150,30</area>
            <align>right,vcenter</align>
            <font>text_small</font>
            <value>Director:</value>
        </textarea>
        <textarea name="cast_label" from="director_label" depends="cast">
            <position>20,300</position>
            <value>Cast:</value>
        </textarea>
        <textarea name="genre_label" from="director_label" depends="genres">
            <position>20,330</position>
            <value>Genres:</value>
        </textarea>
        <textarea name="season_label" from="director_label" depends="season">
            <position>20,360</position>
            <value>Season:</value>
        </textarea>
        <textarea name="episode_label" from="director_label" depends="episode">
            <position>165,360</position>
            <value>Episode:</value>
        </textarea>
        <textarea name="rating_label" from="director_label" depends="rating">
             <position>500,360</position>
             <value>Rated:</value>
        </textarea>
        <textarea name="year_label" from="director_label" depends="year">
            <position>20,390</position>
            <value>Year:</value>
        </textarea>
        <textarea name="length_label" from="director_label" depends="length">
            <position>165,390</position>
            <value>Runtime:</value>
        </textarea>
        <textarea name="level_label" from="base_textarea" depends="videolevel">
            <area>320,390,330,30</area>
            <align>right,vcenter</align>
            <font>text_small</font>
            <value>Parental Level:</value>
        </textarea>

        <!-- show the values to the different labels -->
        <textarea name="director" from="base_textarea">
            <area>180,270,540,30</area>
            <font>text_small</font>
        </textarea>
        <textarea name="cast" from="director">
            <position>180,300</position>
        </textarea>
        <textarea name="genres" from="director">
            <position>180,330</position>
        </textarea>
        <textarea name="season" from="base_textarea">
            <area>180,360,270,30</area>
            <font>text_small</font>
        </textarea>
        <textarea name="episode" from="season">
            <position>320,360</position>
        </textarea>
        <textarea name="rating" from="base_textarea">
             <area>660,360,70,30</area>
        </textarea>
        <textarea name="year" from="season">
            <position>180,390</position>
        </textarea>
        <textarea name="length" from="season">
            <position>320,390</position>
        </textarea>
        <imagetype name="videolevel_background" from="base_parentallevel_background">
            <position>660,395</position>
        </imagetype>
        <statetype name="videolevel" from="base_parentallevel">
            <position>660,395</position>
        </statetype>
    </group>
        
        
        
        
        
        
    <!-- Shows the title and the description of the selected video -->
    <group name="base_video_description_group">
    
        <!-- the darkened background around the area -->
        <shape name="video_description_background" from="base_background_shape">
            <area>0,0,720,210</area>
        </shape>

        <textarea name="title" from="base_textarea">
            <area>15,13,580,30</area>
            <multiline>no</multiline>
            <cutdown>yes</cutdown>
            <font>title</font>
        </textarea>
        
        <!-- the rating of the video -->
        <imagetype name="userratingstate_background" from="base_rating_background">
            <position>620,18</position>
        </imagetype>
        <statetype name="userratingstate" from="base_rating">
            <position>620,18</position>
        </statetype>

        <textarea name="subtitle" from="base_textarea">
            <area>15,45,580,30</area>
            <multiline>no</multiline>
            <font>text_small</font>
            <cutdown>yes</cutdown>
        </textarea>

        <shape name="title_separator" from="base_separator_shape">
            <area>15,80,690,1</area>
        </shape>

        <textarea name="description" from="base_textarea">
            <area>15,92,690,120</area>
            <font>text_small</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>left,top</align>
        </textarea>
    </group>





    <!-- Shows more details about the selected video -->
    <group name="base_video_details_group">
    
        <shape name="video_details_background" from="base_background_shape">
            <area>0,0,500,210</area>
        </shape>

        <textarea name="position" from="base_textarea">
            <area>365,15,120,20</area>
            <font>text_small</font>
            <align>right,vcenter</align>
        </textarea>
        
        <!-- show the meaning of the different details -->
        <textarea name="director_label" from="base_textarea" depends="director">
            <area>0,15,140,20</area>
            <align>right,vcenter</align>
            <font>text_small</font>
            <value>Director:</value>
        </textarea>
        <textarea name="cast_label" from="director_label" depends="cast">
            <position>0,40</position>
            <value>Cast:</value>
        </textarea>
        <textarea name="season_label" from="director_label" depends="season">
            <position>0,110</position>
            <value>Season:</value>
        </textarea>
        <textarea name="episode_label" from="director_label" depends="episode">
            <position>265,110</position>
            <value>Episode:</value>
        </textarea>
        <textarea name="year_label" from="director_label" depends="year">
            <position>0,145</position>
            <value>Year:</value>
        </textarea>
        <textarea name="length_label" from="director_label" depends="length">
            <position>265,145</position>
            <value>Runtime:</value>
        </textarea>
        <textarea name="level_label" from="director_label" depends="videolevel">
            <position>0,130</position>
            <value>Parental Level:</value>
        </textarea>
        <textarea name="rating_label" from="director_label" depends="rating">
            <position>265,130</position>
            <value>Rating:</value>
        </textarea>
        
        <!-- show the values to the different details -->
        <textarea name="director" from="base_textarea">
            <area>145,15,180,20</area>
            <cutdown>yes</cutdown>
            <align>left,vcenter</align>
            <font>text_small</font>
        </textarea>
        <textarea name="cast" from="base_textarea">
            <area>145,45,300,70</area>
            <align>left,top</align>
            <font>text_small</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
        </textarea>
        <textarea name="season" from="director">
            <position>145,115</position>
        </textarea>
        <textarea name="episode" from="director">
            <position>345,115</position>
        </textarea>
        <textarea name="year" from="director">
            <position>145,145</position>
        </textarea>
        <textarea name="length" from="director">
            <position>345,145</position>
        </textarea>
        <imagetype name="videolevel_background" from="base_parentallevel_background" depends="videolevel">
            <position>315,175</position>
        </imagetype>
        <statetype name="videolevel" from="base_parentallevel">
            <position>315,175</position>
        </statetype>
        <textarea name="rating" from="base_textarea">
             <area>405,170,70,30</area>
        </textarea>
    </group>
    
</mythuitheme>
