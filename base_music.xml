    <!-- Shows the playlist moving state as images -->
    <statetype name="base_music_movestate">
        <area>0,0,30,30</area>
        <!-- workaround because the off state is not active as a default -->
        <imagetype name="movestate_image">
            <filename>images/shared/music/arrow_updown.png</filename>
            <area>2,2,26,26</area>
            <alpha>50</alpha>
        </imagetype>
        <state name="off">
            <imagetype name="movestate_image">
                <filename>images/shared/music/arrow_updown.png</filename>
                <area>2,2,26,26</area>
                <alpha>50</alpha>
            </imagetype>
        </state>
        <state name="on">
            <imagetype name="movestate_image">
                <filename>images/shared/music/arrow_updown.png</filename>
                <area>2,2,26,26</area>
            </imagetype>
        </state>
    </statetype>


    <!-- Shows if the track is in a playlist -->
    <statetype name="base_music_playliststate">
        <area>0,0,30,30</area>
        <state name="off">
            <imagetype name="playliststate_image">
                <filename>images/shared/music/playlist.png</filename>
                <area>2,2,26,26</area>
                <alpha>50</alpha>
            </imagetype>
        </state>
        <state name="on">
            <imagetype name="playliststate_image">
                <filename>images/shared/music/playlist.png</filename>
                <area>2,2,26,26</area>
            </imagetype>
        </state>
    </statetype>


    <!-- Shows the playing state as images -->
    <statetype name="base_music_playstate">
        <area>0,0,30,30</area>
        <state name="default">
            <imagetype name="playstateimage">
                <filename>images/shared/music/play.png</filename>
                <area>2,2,26,26</area>
                <alpha>50</alpha>
            </imagetype>
        </state>
        <state name="playing">
            <imagetype name="playstateimage">
                <filename>images/shared/music/play.png</filename>
                <area>2,2,26,26</area>
            </imagetype>
        </state>
        <state name="paused">
