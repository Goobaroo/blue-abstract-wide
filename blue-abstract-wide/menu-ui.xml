        <!-- The structure of the menu. This is a vertical list -->
        <buttonlist name="menu">
            <area>160,105,450,520</area>
            <layout>vertical</layout>
            <spacing>10</spacing>
            <wrapstyle>items</wrapstyle>
            <buttonarea>0,30,450,460</buttonarea>
            <triggerevent context="Global" action="SELECT">RIGHT</triggerevent>
            <triggerevent context="Global" action="ESCAPE">LEFT</triggerevent>

            <statetype name="buttonitem">
                <!-- General settings for the menu entry -->
                <state name="active">
                    <area>0,0,450,56</area>
                    <imagetype name="background">
                        <filename />
                    </imagetype>
                    <textarea name="buttontext">
                        <area>8,0,420,40</area>
                        <font>menu</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
                <!-- Menu entry has been selected and is active -->
                <state name="selectedactive" from="active">
                    <imagetype name="background">
                        <filename>images/widgets/menu_active_fade.png</filename>
                        <alphapulse min="120" max="255" change="2"/>
                        <alpha>200</alpha>
                    </imagetype>
                    <textarea name="description">
                        <area>8,35,420,20</area>
                        <font>menu_description</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
            </statetype>

            <!-- Show the arrow image that indicates that there are
            more menu entries above the first visible menu -->
            <statetype name="upscrollarrow">
                <position>20,0</position>
                <showempty>yes</showempty>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>images/shared/arrow_up.png</filename>
                    </imagetype>
                </state>
            </statetype>

            <!-- Show the arrow image that indicates that there are
            more menu entries below the last visible menu -->
            <statetype name="downscrollarrow">
                <position>20,495</position>
                <showempty>yes</showempty>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>images/shared/arrow_down.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

