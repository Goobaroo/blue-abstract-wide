    <!-- Shows the buttonlist tree at the top and the playlist information
         at the bottom. The user can navigate and select / add music -->
    <window name="playlisteditorview_tree" include="base_music.xml">

        <imagetype name="background" from="base_background"/>

        <textarea name="heading" from="base_heading">
            <position>0,0</position>
            <textarea name="text">
                <value>Playlist Editor View </value>
            </textarea>
        </textarea>

        <textarea name="clock" from="base_clock">
            <position>1040,0</position>
        </textarea>

        <shape name="playlisteditorview_background" from="base_background_shape">
            <area>25,60,1230,345</area>
        </shape>

        <!-- shows path to current item -->
        <textarea name="breadcrumbs" from="base_textarea">
            <area>46,75,950,30</area>
        </textarea>

        <!-- shows current position -->
        <textarea name="position" from="base_textarea">
            <area>1040,75,190,30</area>
            <align>right,vcenter</align>
        </textarea>

        <!-- shows the buttontree with the tracks, albums, ... -->
        <buttontree name="playlist_tree">
            <area>45,115,1190,275</area>
            <numlists>3</numlists>
            <spacing>4</spacing>
            <buttonlist name="listtemplate">
                <area>0,0,390,275</area>
                <layout>vertical</layout>
                <spacing>2</spacing>
                <scrollstyle>free</scrollstyle>
                <wrapstyle>selection</wrapstyle>
                <buttonarea>0,0,100%,97%</buttonarea>

                <!-- states that the buttonlist can have -->
                <statetype name="buttonitem">

                    <!-- active menu entry -->
                    <state name="active">

                        <imagetype name="buttonbackground" from="base_image_active">
                            <filename>images/widgets/widget_inactive.png</filename>
                            <area>0,0,390,36</area>
                        </imagetype>

                        <!-- the button's text -->
                        <textarea name="buttontext">
                            <area>8,3,340,30</area>
                            <font>text_small</font>
                            <cutdown>yes</cutdown>
                            <align>left,vcenter</align>
                        </textarea>

                        <!-- settings when the button has also a checkbox -->
                        <statetype name="buttoncheck">
                            <position>353,3</position>
                            <state type="off">
                                <imagetype name="checkoff">
                                    <filename>images/widgets/checkbox_off.png</filename>
                                </imagetype>
                            </state>
                            <state type="half">
                            <imagetype name="checkhalf">
                                    <filename>images/widgets/checkbox_half.png</filename>
                                </imagetype>
                            </state>
                            <state type="full">
                                <imagetype name="checkfull">
                                    <filename>images/widgets/checkbox_full.png</filename>
                                </imagetype>
                            </state>
                        </statetype>

                        <!-- indicates the button contains a submenu -->
                        <imagetype name="buttonarrow" from="base_arrow_active">
                            <position>361,4</position>
                            <filename>images/shared/arrow_right.png</filename>
                        </imagetype>
                    </state>

                    <!-- inactive menu entry -->
                    <state name="inactive" from="active" />

                    <!-- menu entry has been selected and is active -->
                    <state name="selectedactive" from="active">
                        <imagetype name="buttonbackground" from="base_image_selectedactive">
                            <filename>images/widgets/widget_active.png</filename>
                            <area>0,0,390,36</area>
                        </imagetype>
                        <imagetype name="buttonarrow" from="base_arrow_selectedactive">
                            <position>361,4</position>
                            <filename>images/shared/arrow_right.png</filename>
                        </imagetype>
                    </state>

                    <!-- menu entry has been selected and is inactive -->
                    <state name="selectedinactive" from="active">
                        <imagetype name="buttonbackground" from="base_image_selectedinactive">
                            <filename>images/widgets/widget_active.png</filename>
                            <area>0,0,390,36</area>
                        </imagetype>
                        <textarea name="buttontext">
                            <font>text_inactive</font>
                        </textarea>
                        <imagetype name="buttonarrow" from="base_arrow_selectedinactive">
                            <position>361,4</position>
                            <filename>images/shared/arrow_right.png</filename>
                        </imagetype>
                    </state>
                </statetype>

                <!-- show arrows to indicates that there are
                     more menu entries above the first visible menu -->
                <statetype name="upscrollarrow">
                    <position>335,97%</position>
                    <state type="off">
                        <imagetype name="upon" from="base_arrow_inactive">
                            <filename>images/shared/arrow_up.png</filename>
                        </imagetype>
                    </state>
                    <state type="full">
                        <imagetype name="upoff" from="base_arrow_selectedactive">
                            <filename>images/shared/arrow_up.png</filename>
                        </imagetype>
                    </state>
                </statetype>

                <!-- show arrows to indicates that there are
                     more menu entries below the last visible menu -->
                <statetype name="downscrollarrow">
                    <position>360,97%</position>
                    <state type="off">
                        <imagetype name="dnon" from="base_arrow_inactive">
                            <filename>images/shared/arrow_down.png</filename>
                        </imagetype>
                    </state>
                    <state type="full">
                        <imagetype name="dnoff" from="base_arrow_selectedactive">
                            <filename>images/shared/arrow_down.png</filename>
                        </imagetype>
                    </state>
                </statetype>
            </buttonlist>
        </buttontree>

        <!-- shows the current playlist with some status information -->
        <group name="playlist_group" from="base_music_playlist_group">
            <position>0,430</position>
        </group>

    </window>






