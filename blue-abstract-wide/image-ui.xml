<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <!-- Default screen that shows the the available images in a list -->
    <window name="gallery">

        <imagetype name="fanart" from="base_background"/>
        
        <textarea name="heading" from="base_heading">
            <position>0,0</position>
            <textarea name="text">
                <value>Image Gallery</value>
            </textarea>
        </textarea>

        <textarea name="clock" from="base_clock">
            <position>1040,0</position>
        </textarea>

        <shape name="gallery_background" from="base_background_shape">
            <area>25,60,1230,633</area>
        </shape>

        <!-- shows the name of the folder or image -->
        <textarea name="title" from="base_textarea">
            <area>45,80,900,30</area>
            <cutdown>yes</cutdown>
            <font>title</font>
            <align>left,vcenter</align>
        </textarea>

        <!-- optional - shows current position in grid eg '1 of 123' -->
        <textarea name="position" from="base_textarea">
            <area>985,80,250,30</area>
            <align>right,vcenter</align>
        </textarea>

        <!-- shows path to current image -->
        <textarea name="breadcrumbs" from="base_textarea">
            <area>45,120,1000,20</area>
            <font>text_very_small</font>
            <cutdown>yes</cutdown>
        </textarea>

        <!-- the list that shows the images in the screen -->
        <buttonlist name="images">
            <area>45,155,1170,535</area>
            <buttonarea>0,0,1190,535</buttonarea>
            <wrapstyle>flowing</wrapstyle>
            <layout>grid</layout>
            <spacing>7</spacing>
            <statetype name="buttonitem">
                
                <state name="active">
                    <area>0,0,164,124</area>
                    
                    <imagetype name="buttonimage_background">
                        <shape name="buttonimage_background_shape" from="base_background_shape">
                            <area>0,0,164,124</area>
                            <line color="#000000" alpha="0" width="1" />
                        </shape>
                    </imagetype>
                    
                    <!-- Show an additional background image if required. This is
                    primarily useful when the item is a folder and a folder background
                    image shall be shown behind the small preview thumbnail images -->
                    <statetype name="background">
                        <position>0,0</position>
                        <state name="folder">
                            <imagetype name="icon">
                                <area>2,2,160,120</area>
                                <filename>images/shared/folder.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                        <state name="image">
                        </state>
                        <state name="video">
                            <imagetype name="icon">
                                <area>2,2,160,120</area>
                                <filename>images/shared/video.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>

                    <!-- this shows the actual image -->
                    <imagetype name="buttonimage">
                        <area>2,2,160,120</area>
                        <preserveaspect>yes</preserveaspect>
                    </imagetype>

                    <imagetype name="buttonimage_border">
                        <shape name="buttonimage_border_shape" from="base_background_shape">
                            <area>0,0,164,124</area>
                            <fill color="#000000" alpha="0" />
                        </shape>
                    </imagetype>
                    
                    <!-- shows that the image was marked/selected and
                        might be manipulated with other images -->
                    <statetype name="buttoncheck">
                        <position>2,2</position>
                        <showempty>yes</showempty>
                        <state type="full">
                            <shape name="marked_background" from="base_background_shape">
                                <area>0,0,33,33</area>
                                <line color="#000000" alpha="0" width="1" />
                            </shape>
                            <imagetype name="marked">
                                <filename>images/shared/file_marked.png</filename>
                            </imagetype>
                        </state>
                    </statetype>

                    <!-- shows the name of the currently active file.
                        this is the same as the title in the top -->
                    <!--<shape name="buttonimage_shape" from="base_background_shape">
                        <area>1,1,162,26</area>
                        <type>box</type>
                        <line color="#000000" alpha="0" width="1" />
                    </shape>
                    <textarea name="buttontext">
                        <area>0,4,164,20</area>
                        <font>text_very_small</font>
                        <align>allcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>-->

                    <statetype name="nodestate">
                        <position>0,0</position>
                        <state name="hidden">
                            <shape name="hidden_background_shape" from="base_background_shape_dark">
                                <area>1,1,162,122</area>
                                <line color="#000000" alpha="0" width="1" />
                            </shape>
                        </state>
                        <state name="visible">
                        </state>
                    </statetype>

                    <!-- show a folder above the image if its a folder and not an image.
                        the node is a folder and it is currently not selected -->
                    <statetype name="nodetype">
                        <position>0,0</position>
                        <state name="subfolder">
                            <shape name="buttonimage_shape" from="base_background_shape">
                                <area>1,93,162,30</area>
                                <type>box</type>
                                <line color="#000000" alpha="0" width="1" />
                            </shape>
                            <imagetype name="icon">
                                <area>7,97,24,24</area>
                                <filename>images/shared/folder.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                        <state name="upfolder">
                            <shape name="buttonimage_shape" from="base_background_shape">
                                <area>1,93,162,30</area>
                                <type>box</type>
                                <line color="#000000" alpha="0" width="1" />
                            </shape>
                            <imagetype name="icon">
                                <area>7,97,24,24</area>
                                <filename>images/shared/folder_up.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>

                    <!-- show how many images / directories are in this directory -->
                    <textarea name="childcount" from="base_textarea">
                        <area>37,95,60,30</area>
                        <font>text_small</font>
                        <align>left,vcenter</align>
                    </textarea>
                </state>


                <state name="selectedactive">
                    <area>-38,-28,240,180</area>

                    <imagetype name="buttonimage_background">
                        <shape name="buttonimage_background_shape" from="base_background_shape_dark">
                            <area>0,0,240,180</area>
                            <line color="#000000" alpha="0" width="1" />
                        </shape>
                    </imagetype>
                    
                    <!-- Show an additional background image if required. This is
                    primarily useful when the item is a folder and a folder background
                    image shall be shown behind the small preview thumbnail images -->
                    <statetype name="background">
                        <position>0,0</position>
                        <state name="folder">
                            <imagetype name="icon">
                                <area>2,2,235,176</area>
                                <filename>images/shared/folder_open.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                        <state name="image">
                        </state>
                        <state name="video">
                            <imagetype name="icon">
                                <area>2,2,235,176</area>
                                <filename>images/shared/video.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>

                    <!-- this shows the actual image -->
                    <imagetype name="buttonimage">
                        <area>2,2,235,176</area>
                        <preserveaspect>yes</preserveaspect>
                    </imagetype>

                    <imagetype name="buttonimage_border">
                        <shape name="buttonimage_border_shape" from="base_background_shape">
                            <area>0,0,240,180</area>
                            <fill color="#000000" alpha="0" />
                            <line color="#AAAAAA" alpha="150" width="2" />
                        </shape>
                    </imagetype>
                    
                    <!-- shows that the image was marked/selected and
                        might be manipulated with other images -->
                    <statetype name="buttoncheck">
                        <position>2,2</position>
                        <showempty>yes</showempty>
                        <state type="full">
                            <shape name="marked_background" from="base_background_shape">
                                <area>0,0,33,33</area>
                                <line color="#000000" alpha="0" width="1" />
                            </shape>
                            <imagetype name="marked">
                                <filename>images/shared/file_marked.png</filename>
                            </imagetype>
                        </state>
                    </statetype>

                    <!-- shows the name of the currently active file.
                        this is the same as the title in the top -->
                    <!--<shape name="buttonimage_shape" from="base_background_shape">
                        <area>1,1,238,26</area>
                        <type>box</type>
                        <line color="#000000" alpha="0" width="1" />
                    </shape>
                    <textarea name="buttontext">
                        <area>0,4,240,20</area>
                        <font>text_very_small</font>
                        <align>allcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>-->

                    <statetype name="nodestate">
                        <position>0,0</position>
                        <state name="hidden">
                            <shape name="hidden_background_shape" from="base_background_shape_dark">
                                <area>1,1,237,178</area>
                                <line color="#000000" alpha="0" width="1" />
                            </shape>
                        </state>
                        <state name="visible">
                        </state>
                    </statetype>

                    <!-- show a folder above the image if its a folder and not an image.
                        the node is a folder and it is currently not selected -->
                    <statetype name="nodetype">
                        <position>0,0</position>
                        <state name="subfolder">
                            <shape name="buttonimage_shape" from="base_background_shape">
                                <area>1,139,238,40</area>
                                <line color="#000000" alpha="0" width="1" />
                            </shape>
                            <imagetype name="icon">
                                <area>9,144,32,32</area>
                                <filename>images/shared/folder_open.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                        <state name="upfolder">
                            <shape name="buttonimage_shape" from="base_background_shape">
                                <area>1,139,238,40</area>
                                <line color="#000000" alpha="0" width="1" />
                            </shape>
                            <imagetype name="icon">
                                <area>9,144,32,32</area>
                                <filename>images/shared/folder_up_open.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>

                    <!-- show how many images / directories are in this directory -->
                    <textarea name="childcount" from="base_textarea">
                        <area>49,145,60,30</area>
                        <font>text_small</font>
                        <align>left,vcenter</align>
                    </textarea>

                </state>
            </statetype>

            <!-- Show the arrow image that indicates that there are
                more menu entries above the first visible menu -->
            <statetype name="upscrollarrow">
                <position>1135,-20</position>
                <state type="off">
                    <imagetype name="upon" from="base_arrow_inactive">
                        <filename>images/shared/arrow_up.png</filename>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff" from="base_arrow_selectedactive">
                        <filename>images/shared/arrow_up.png</filename>
                    </imagetype>
                </state>
            </statetype>

            <!-- Show the arrow image that indicates that there are
                more menu entries below the last visible menu -->
            <statetype name="downscrollarrow">
                <position>1160,-20</position>
                <state type="off">
                    <imagetype name="dnon" from="base_arrow_inactive">
                        <filename>images/shared/arrow_down.png</filename>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff" from="base_arrow_selectedactive">
                        <filename>images/shared/arrow_down.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="noimages" from="base_textarea">
            <area>225,60,830,633</area>
            <align>allcenter</align>
        </textarea>
    </window>






    <!-- Filter screen that lets the user decide what
         and how images shall be shown in the gallery screen -->
    <window name="filter">

        <!-- the background image -->
        <imagetype name="background" from="base_background"/>

        <!-- The heading (name) of the screen -->
        <textarea name="heading" from="base_heading">
            <position>0,0</position>
            <textarea name="text">
            <value>Filter/sort images</value>
            </textarea>
        </textarea>

        <!-- The clock that is shown at the top right of each screen -->
        <textarea name="clock" from="base_clock">
            <position>1040,0</position>
        </textarea>

        <!-- the shape where the imagelist is displayed -->
        <shape name="filter_background" from="base_background_shape">
            <area>260,190,760,320</area>
        </shape>

        <!-- Filter: labels -->
        <textarea name="filter_text" from="base_textarea">
            <area>280,210,200,40</area>
            <value>Directory filter:</value>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="type_filter" from="base_textarea">
            <area>280,260,200,40</area>
            <value>Type filter:</value>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="sort_text" from="base_textarea">
            <area>280,310,200,40</area>
            <value>Sort by:</value>
            <align>right,vcenter</align>
        </textarea>

        <!-- Widgets -->
        <textedit name="dirfilter_text" from="base_textedit">
            <position>490,210</position>
        </textedit>
        <buttonlist name="typefilter_select" from="base_selector">
            <position>490,260</position>
        </buttonlist>
        <button name="check_button" from="base_button">
            <position>715,260</position>
            <value>Check Filter</value>
        </button>
        <buttonlist name="sort_select" from="base_selector_wide">
            <position>490,310</position>
        </buttonlist>

        <!-- shows the amount of filtered videos -->
        <shape name="numvideos_background" from="base_background_shape">
            <area>280,370,720,60</area>
        </shape> 
        <textarea name="numimages_text" from="base_textarea">
            <area>300,370,680,60</area>
            <align>allcenter</align>
            <font>text_small</font>
        </textarea>

        <button name="save_button" from="base_button_wide">
            <position>490,450</position>
            <value>Save as default</value>
        </button>
        <button name="done_button" from="base_button">
            <position>850,450</position>
            <value>Done</value>
        </button>

    </window>






    <!-- Configuration dialog. This is currently
         used by the MythImage plugin only -->
    <window name="galleryconfig">

        <!-- the background image -->
        <imagetype name="background" from="base_background"/>

        <!-- The heading (name) of the screen -->
        <textarea name="heading" from="base_heading">
            <position>0,0</position>
            <textarea name="text">
            <value>Gallery Settings</value>
            </textarea>
        </textarea>

        <!-- The clock that is shown at the top right of each screen -->
        <textarea name="clock" from="base_clock">
            <position>1040,0</position>
        </textarea>

        <!-- the shape where the imagelist is displayed -->
        <shape name="galleryconfig_background" from="base_background_shape">
            <area>160,170,960,410</area>
        </shape>

        <textarea name="sgname_label" from="base_textarea">
            <area>180,190,540,40</area>
            <align>right,vcenter</align>
            <value>Name of the storage group for the images:</value>
        </textarea>
        <textarea name="sortorder_label" from="sgname_label">
            <position>180,240</position>
            <value>Sorting order of the shown images:</value>
        </textarea>
        <textarea name="slideshowtime_label" from="sgname_label">
            <position>180,290</position>
            <value>Time to display each image during a slideshow (ms):</value>
        </textarea>
        <textarea name="transitiontype_label" from="sgname_label">
            <position>180,340</position>
            <value>Type of transition between two images:</value>
        </textarea>
        <textarea name="transitiontime_label" from="sgname_label">
            <position>180,390</position>
            <value>Duration of an image transition (ms):</value>
        </textarea>
        <textarea name="showhiddenfiles_label" from="sgname_label">
            <position>180,440</position>
            <value>Show files that are marked as hidden:</value>
        </textarea>

        <textedit name="storagegroupname" from="base_textedit">
            <position>730,190</position>
        </textedit>
        <buttonlist name="sortorder" from="base_selector_wide">
            <position>730,240</position>
        </buttonlist>
        <spinbox name="slideshowtime" from="base_spinbox">
            <position>730,290</position>
        </spinbox>
        <buttonlist name="transitiontype" from="base_selector">
            <position>730,340</position>
        </buttonlist>
        <spinbox name="transitiontime" from="base_spinbox">
            <position>730,390</position>
        </spinbox>
        <checkbox name="showhiddenfiles" from="base_checkbox">
            <position>730,445</position>
        </checkbox>

        <shape name="description_separator" from="base_separator_shape">
            <area>180,500,920,1</area>
        </shape>

        <button name="save" from="base_button">
            <position>510,520</position>
            <value>Save</value>
        </button>
        <button name="cancel" from="base_button">
            <position>680,520</position>
            <value>Cancel</value>
        </button>

    </window>






    <!-- Slideshow window which shows the a single image only or a slideshow.
         This is currently used by the MythImage plugin only -->
    <window name="slideshow">

        <!-- the background behind the images (black) -->
        <shape name="background_shape" from="base_background_shape">
            <area>-2,-2,1284,724</area>
            <fill color="#000000" alpha="255" />
            <line color="#000000" alpha="255" />
        </shape>

        <!-- this is the image that shown in the foreground.
             when fading is enabled this image is faded out. -->
        <imagetype name="first_image">
            <area>-2,-2,1284,724</area>
            <preserveaspect>yes</preserveaspect>
        </imagetype>

        <!-- this is the image that shown in the background
             when fading is enabled this image is faded in. -->
        <imagetype name="second_image">
            <area>-2,-2,1284,724</area>
            <preserveaspect>yes</preserveaspect>
        </imagetype>

        <!-- shows some information if required -->
        <textarea name="status" from="base_textarea">
            <area>500,-4,280,30</area>
            <shape name="background" from="base_background_shape">
                <area>0,0,280,40</area>
            </shape>
            <textarea name="status_text" from="base_textarea">
                <area>0,0,280,40</area>
                <align>allcenter</align>
                <value>Image Loading...</value>
            </textarea>
        </textarea>

    </window>






    <!-- Show the details of the selected image.
         This is currently used by the MythImage plugin only -->
    <window name="details">

        <!-- the background behind the images (black) -->
        <shape name="background_shape" from="base_background_shape">
            <area>0,0,1280,720</area>
            <fill color="#000000" alpha="255" />
            <line color="#000000" alpha="255" />
        </shape>

        <!-- the image that shown in the background -->
        <imagetype name="image">
            <area>-2,-2,1284,724</area>
            <preserveaspect>yes</preserveaspect>
        </imagetype>

        <!-- The heading (name) of the screen -->
        <textarea name="heading" from="base_heading">
            <position>0,0</position>
            <textarea name="text">
            <value>Image Details</value>
            </textarea>
        </textarea>

        <!-- The clock that is shown at the top right of each screen -->
        <textarea name="clock" from="base_clock">
            <position>1040,0</position>
        </textarea>

        <!-- the shape where the imagelist is displayed -->
        <shape name="gallerydetails_background" from="base_background_shape">
            <area>260,80,760,560</area>
        </shape>


        <textarea name="filename_label" from="base_textarea">
            <area>280,100,240,40</area>
            <align>right,vcenter</align>
            <cutdown>yes</cutdown>
            <value>Filename:</value>
        </textarea>
        <textarea name="directory_label" from="filename_label">
            <position>280,145</position>
            <value>Directory:</value>
        </textarea>
        <textarea name="size_label" from="filename_label">
            <position>280,190</position>
            <value>Size (Bytes):</value>
        </textarea>
        <textarea name="modified_label" from="filename_label">
            <position>280,235</position>
            <value>Modification Time:</value>
        </textarea>
        <textarea name="created_label" from="filename_label">
            <position>280,280</position>
            <value>Creation Time:</value>
        </textarea>
        <textarea name="height_label" from="filename_label">
            <position>280,325</position>
            <value>Image Height:</value>
        </textarea>
        <textarea name="width_label" from="filename_label">
            <position>280,370</position>
            <value>Image Width:</value>
        </textarea>
        <textarea name="pixelcount_label" from="filename_label">
            <position>280,415</position>
            <value>Pixel Count:</value>
        </textarea>
        <textarea name="comment_label" from="filename_label">
            <position>280,460</position>
            <value>User Comment:</value>
        </textarea>
        <textarea name="description_label" from="filename_label">
            <position>280,505</position>
            <value>Image Description:</value>
        </textarea>

        <textarea name="filename" from="base_textarea">
            <area>530,100,470,40</area>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <value>No image name available</value>
        </textarea>
        <textarea name="directory" from="filename">
            <position>530,145</position>
            <value>No image path available</value>
        </textarea>
        <textarea name="size" from="filename">
            <position>530,190</position>
            <value>No image size available</value>
        </textarea>
        <textarea name="modified" from="filename">
            <position>530,235</position>
            <value>No modification time available</value>
        </textarea>
        <textarea name="created" from="filename">
            <position>530,280</position>
            <value>No creation time available</value>
        </textarea>
        <textarea name="height" from="filename">
            <position>530,325</position>
            <value>No image height available</value>
        </textarea>
        <textarea name="width" from="filename">
            <position>530,370</position>
            <value>No image width available</value>
        </textarea>
        <textarea name="pixelcount" from="filename">
            <position>530,415</position>
            <value>No pixel count available</value>
        </textarea>
        <textarea name="comment" from="filename">
            <position>530,460</position>
            <value>No user comment available</value>
        </textarea>
        <textarea name="description" from="filename">
            <position>530,505</position>
            <value>No image description available</value>
        </textarea>

        <shape name="details_separator" from="base_separator_shape">
            <area>280,560,720,1</area>
        </shape>

        <button name="close" from="base_button">
            <position>570,580</position>
            <value>Close</value>
        </button>

    </window>

</mythuitheme>
