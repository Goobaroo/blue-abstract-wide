        <textarea name="title">
            <area>240,590,380,30</area>
            <align>left,vcenter</align>
            <multiline>no</multiline>
            <cutdown>yes</cutdown>
            <font>text</font>
        </textarea>
        
        <textarea name="description">
            <area>640,590,400,30</area>
            <align>right,vcenter</align>
            <multiline>no</multiline>
            <cutdown>yes</cutdown>
            <font>text</font>
            <template>%DESCRIPTION% %VALUE%%UNITS%</template>
        </textarea>

        <progressbar name="position">
            <area>240,635,800,20</area>
            <layout>horizontal</layout>
            <style>reveal</style>
            <imagetype name="background">
                <filename>images/widgets/progressbar/progressbar_inactive.png</filename>
                <area>0,0,800,20</area>
                <alpha>150</alpha>
            </imagetype>
            <imagetype name="progressimage">
                <filename>images/widgets/progressbar/progressbar_active.png</filename>
                <area>0,0,800,20</area>
                <alpha>220</alpha>
            </imagetype>
        </progressbar>
    </window>






